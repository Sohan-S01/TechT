#include<stdio.h>
#include<math.h>
#include<stdlib.h>

int main(){
    float x,y;
    printf("Enter X:");
    scanf("%f",&x);
    printf("Enter Y:");
    scanf("%f",&y);    
    printf("\nFor the given mathematical expression the answer is:\n");
    float numerator = (sin(x)+cos(x));
    float denominator = (tan(x));
    float ans = (numerator/ denominator);
    printf("%.2f",ans);
    return 0;
  }
